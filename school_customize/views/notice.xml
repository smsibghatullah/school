<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="cusotmaize_view_school_notice_form" model="ir.ui.view">
            <field name="name">student.reminder.form</field>
           <field name="inherit_id" ref="school.view_student_reminder_form_2" />
            <field name="model">student.reminder</field>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='stu_id']" position="before">
                       <field name="class_id"/>
                 </xpath>

            </field>
    </record>

     <record model="ir.ui.view" id="cusotmaize_view_school_notice_tree">
        <field name="name">student.reminder.tree</field>
        <field name="model">student.reminder</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="stu_id"/>
                <field name="class_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="school.action_student_reminder" model="ir.actions.act_window">
        <field name="name">Students Reminder</field>
        <field name="res_model">student.reminder</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Reminder.
            </p>
            <p>
             This structure is used to create and manage all Remainders
            related to students regarding exams, events etc.
          </p>
        </field>
    </record>

    <record id="school.action_view_student_reminder_kanban" model="ir.actions.act_window.view">
        <field name="view_mode">tree</field>
        <field eval="0" name="sequence" />
        <field name="view_id" ref="cusotmaize_view_school_notice_tree" />
        <field name="act_window_id" ref="school.action_student_reminder" />
    </record>

      <record id="action_contact_us_form" model="ir.actions.act_window">
        <field name="name">Contact Us</field>
        <field name="res_model">contactus</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_contactus_tree" model="ir.ui.view">
        <field name="name">contactus</field>
        <field name="model">contactus</field>
        <field name="arch" type="xml">
            <tree >
                <field name="title"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <menuitem id="custom_menu_contactus" name="ContactUs" parent="school.menu_reminders_root" action="action_contact_us_form"
              groups="school.group_school_administration,school.group_school_student,school.group_school_parent" sequence="111"/>


    <record id="action_introduction_form" model="ir.actions.act_window">
        <field name="name">Introduction</field>
        <field name="res_model">introduction</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_introduction_tree" model="ir.ui.view">
        <field name="name">introduction</field>
        <field name="model">introduction</field>
        <field name="arch" type="xml">
            <tree >
                <field name="title"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <menuitem id="custom_menu_introduction" name="Introduction" parent="school.menu_reminders_root" action="action_introduction_form"
              groups="school.group_school_administration,school.group_school_student,school.group_school_parent" sequence="111"/>




</odoo>