    <record id="customize_view_student_payslip_form" model="ir.ui.view">
        <field name="name">customize.student.payslip.form</field>
        <field name="inherit_id" ref="school_fees.view_student_payslip_form"/>
        <field name="model">student.payslip</field>
        <field name="arch" type="xml">

            <xpath expr="//form/sheet" position="replace">


                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="invoice_view" string="Invoice" icon="fa-pencil-square-o" widget="stateinfo"
                                class="oe_stat_button"
                                states="pending,paid" type="object" groups="school.group_school_administration"/>
                    </div>
                    <h2>
                        <field name="student_id" placeholder="Student Name" colspan="4"
                               attrs="{'readonly':[('state','not in','draft')]}"
                               domain="[('state','=','done')]" options="{&quot;no_create&quot;: True}"/>
                    </h2>
                    <group>
                        <group col="2" string="Information">
                            <field name="name" placeholder="Description" required="1"
                                   attrs="{'readonly':[('state','not in','draft')]}"/>
                            <field name="number" readonly="1"
                                   attrs="{'invisible': [('state', 'not in', ('pending', 'paid'))]}"/>
                            <field name="date" attrs="{'readonly':[('state','not in','draft')]}"/>
                        </group>
                        <group col="2" string="Standard Information">
                            <field name="standard_id" placeholder="Standard" widget="selection"
                                   attrs="{'readonly':[('state','not in','draft')]}" readonly="1"/>
                            <field name="division_id" placeholder="Division" widget="selection"
                                   attrs="{'readonly':[('state','not in','draft')]}" readonly="1"/>
                            <field name="medium_id" placeholder="Medium" widget="selection"
                                   attrs="{'readonly':[('state','not in','draft')]}" readonly="1"/>
                        </group>
                    </group>
                    <group col="4">
                        <separator string="Fees Structure" colspan="4"/>
                        <field name="fees_structure_id" required="1" placeholder="Fee Structure"
                               attrs="{'readonly':[('state','not in','draft')]}"
                               options="{&quot;no_create&quot;: True}"/>
                        <field name="journal_id" widget="selection" placeholder="Journal" domain="[('type','=','sale')]"
                               attrs="{'readonly':[('state','not in','draft')]}"/>
                        <notebook colspan="4">
                            <page string="Fee Structure">
<!--                                <field name="line_ids" colspan="4" nolabel="1" readonly="1"/>-->

                                 <field name="line_ids">
                                    <tree string="Fees Structure" editable="top">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="date"/>
                                        <field name="type"/>
                                        <field name="account_id"/>
                                        <field name="discount_amount"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>



                                <separator string="" colspan="4"/>
                                <group class="oe_subtotal_footer oe_right" colspan="2">
                                    <field name="total"/>
                                    <field name="discount" />
                                    <field name="final_amount" />
                                    <field name="paid_amount" readonly="1"/>
                                    <field name="due_amount" readonly="1"/>
                                </group>
                            </page>
                            <page string="Other Information">
                                <group col="4" colspan="4">
                                    <field name="type" placeholder="Type"
                                           attrs="{'readonly':[('state','not in','draft')]}"/>
                                    <field name="currency_id" placeholder="Currency"
                                           attrs="{'readonly':[('state','not in','draft')]}"/>
                                    <field name="currency_symbol" invisible="0"/>
                                    <field name="move_id" attrs="{'readonly':[('state','not in','draft')]}"/>
                                    <field name="payment_date" placeholder="Payment Date"
                                           attrs="{'readonly':[('state','not in','draft')]}"/>
                                    <field name="company_id" string="School" placeholder="School Name"
                                           attrs="{'readonly':[('state','not in','draft')]}"
                                           options="{&quot;no_create&quot;: True}"/>
                                </group>
                            </page>

                            <page id="payslip_structure_line" string="Payslip Structure Line">

                                <field name="payslip_structure_line">
                                    <tree string="Fees Structure" editable="top">
                                        <field name="sequence"/>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="type"/>
                                        <field name="account_id"/>
                                        <field name="discount"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>


                            </page>


                        </notebook>
                    </group>
                </sheet>


                <!--                 <field name="amount"/>-->
                ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

            </xpath>


        </field>
    </record>

